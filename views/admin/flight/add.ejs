          </select>
          <label for="NoiDi">Nơi đi</label>
          <input type="text" name="NoiDi" class="form-control">
          <label for="NoiDen">Nơi đến</label>
          <input type="text" name="NoiDen" class="form-control">
          <label for="idMayBay">Chọn máy bay</label>
          <select class="form-select" aria-label="Default select example" name="idMayBay">
            <option selected disabled="disabled">...</option>
            <% result.recordset.forEach(function (maybay) { %>
              <% if(maybay.TenHang == user2.data.partnerUsername) {%>
            <option><%= maybay.idMayBay %> <%= maybay.TenMayBay %> &#124; <%= maybay.TenHang %> &#124; <%= maybay.SoLuongKhach %> khách</option>                
              <%}%>
            <% }) %>
          </select><br />
