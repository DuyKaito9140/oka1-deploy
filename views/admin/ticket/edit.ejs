<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div style="width: 100%; height: 60px; background-color: #00a6ff;"></div>      
    <br /> 
    <div class="container mt-3">
     <h3 class="text-center">Cập nhật Chuyến Bay</h3>
      <form action="/ticket/edit" method="post">
      <label for="idVe">ID Vé</label>
      <input type="text" name="idVe" value="<%= result.recordset[0].idVe %>" class="form-control" readonly>
      <label for="idLoaiVe">Loại vé</label>
      <select class="form-select" aria-label="Default select example" name="idLoaiVe">
        <option selected><%= result.recordset[0].idLoaiVe[0] %> <%= result.recordset[0].TenLoaiVe %></option>             
        <% result2.recordset.forEach(function (loaive) { %>
          <option><%= loaive.idLoaiVe %> <%= loaive.TenLoaiVe %></option>
       <% }) %>
      </select>   
      <label for="idChuyenBay">Chuyến Bay</label>
      <select class="form-select" aria-label="Default select example" name="idChuyenBay">
        <option selected><%= result.recordset[0].idChuyenBay[0] %> <%= result.recordset[0].NgayBay %> &#124; <%= result.recordset[0].GioBay %> &#45;&#62; <%= result.recordset[0].GioDen %> 
          &#124; <%= result.recordset[0].NoiDi %> &#45;&#62; <%= result.recordset[0].NoiDen %> &#124; <%= result.recordset[0].TenMayBay %> &#124; <%= result.recordset[0].TenHang %> &#124;Khách: <%= result.recordset[0].SoLuongKhach %></option>             
        <% result3.recordset.forEach(function (chuyenbay) { %>
          <% if(chuyenbay.TenHang == user2.data.partnerUsername) {%>
        <option><%= chuyenbay.idChuyenBay %> <%= chuyenbay.NgayBay %> &#124; <%= chuyenbay.GioBay %> &#45;&#62; <%= chuyenbay.GioDen %> 
          &#124; <%= chuyenbay.NoiDi %> &#45;&#62; <%= chuyenbay.NoiDen %> &#124; <%= chuyenbay.TenMayBay %> &#124; <%= chuyenbay.TenHang %> &#124;Khách: <%= chuyenbay.SoLuongKhach %></option>                
          <%}%>
       <% }) %>
      </select>     
      <label for="SoKgHanhLy">Số lượng Kg hành lý mặc định</label>
      <input type="text" name="SoKgHanhLy" value="<%= result.recordset[0].SoKgHanhLy %>" class="form-control">
      <label for="GiaVe">Giá vé</label>
      <input type="text" name="GiaVe" value="<%= result.recordset[0].GiaVe %>" class="form-control">          
      <input type="submit" value="Cập nhật" class="btn btn-primary mt-2"> <br>
      <a href="/ticket/index">Quay lại?</a>
     </form>
    </div>
  </body>
</html>
