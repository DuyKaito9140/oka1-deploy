<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div style="width: 100%; height: 60px; background-color: #00a6ff;"></div>      
    <br /> 
    <div class="container mt-3">
     <h3 class="text-center">Cập nhật Máy Bay</h3>
      <form action="/plane/edit" method="post">
      <label for="idMayBay">ID máy bay</label>
      <input type="text" name="idMayBay" value="<%= result.recordset[0].idMayBay %>" class="form-control" readonly>
      <label for="TenMayBay">Tên máy bay</label>
      <input type="text" name="TenMayBay" value="<%= result.recordset[0].TenMayBay %>" class="form-control">
      <label for="idHang">Hãng máy bay</label>
      <select class="form-select form-control" aria-label=".form-select-sm example" name="idHang"> 
        <option readonly><%= result.recordset[0].idHang[0] %> <%= result.recordset[0].TenHang %></option>
        <% result2.recordset.forEach(function(hang) { %>
          <% if(hang.TenHang == user2.data.partnerUsername) {%>
            <option><%= hang.idHang %> <%= hang.TenHang %></option>
          <%}%>
        <% }); %>
      </select>
      <label for="SoLuongKhach">Số lượng khách tối đa</label>
      <input type="text" name="SoLuongKhach" value="<%= result.recordset[0].SoLuongKhach %>" class="form-control">
      <input type="submit" value="Cập nhật" class="btn btn-primary mt-2"> <br>
      <a href="/plane/index">Quay lại?</a>
     </form>
    </div>
  </body>
</html>
